# =========================
# Backend Environment Vars
# =========================

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/deepread

# Google OAuth
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Auth + Session
# In production, JWT_SECRET must be at least 32 characters.
JWT_SECRET=your_long_random_secret_string_min_32_chars
# In production, SESSION_SECRET must be at least 32 characters.
SESSION_SECRET=your_long_random_session_secret_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080
APP_ENV=development
COOKIE_SAMESITE=lax

# Backend CORS/Auth redirect targets (frontend origins)
NEXTAUTH_URL=http://localhost:3000
FRONTEND_ORIGINS=

# Optional: LangSmith tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=deepread

# Backend app limits + controls
MAX_PAPER_SIZE_MB=20
INGEST_CONCURRENCY_LIMIT=2
INGEST_PENDING_LIMIT=20
INGEST_RATE_LIMIT_PER_MINUTE=15
CONVERSATION_RATE_LIMIT_PER_MINUTE=90
RATE_LIMIT_WINDOW_SECONDS=60
LLM_RETRY_MAX_ATTEMPTS=3
LLM_RETRY_BASE_DELAY_SECONDS=0.8
LLM_RETRY_MAX_DELAY_SECONDS=8.0
CAPACITY_LOCK=false

# ==========================
# Frontend Environment Vars
# ==========================
# Frontend should only read NEXT_PUBLIC_* variables.
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_CAPACITY_LOCK=false

# Production notes:
# - Set APP_ENV=production
# - Use https URLs for NEXTAUTH_URL, GOOGLE_REDIRECT_URI, GITHUB_REDIRECT_URI, NEXT_PUBLIC_API_BASE
# - Do not use localhost in production values
